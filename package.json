{
  "name": "elide-docs",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "build:css": "npx @tailwindcss/cli -i styles/globals.css -o public/styles.css",
    "build": "bun run build:css && bun build-static.mjs",
    "serve": "elide serve dist --port 3000",
    "dev": "bun run build && bun run serve",
    "kill": "lsof -ti:3000,8080 | xargs kill -9 2>/dev/null || echo 'No processes found on ports 3000 or 8080'",
    "clean": "bun run kill && rm -rf dist node_modules/.cache"
  },
  "dependencies": {
    "@mdx-js/mdx": "^3.1.0",
    "gray-matter": "^4.0.3",
    "marked": "^17.0.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "tailwindcss": "^4.1.17",
    "tw-animate-css": "^1.4.0"
  }
}
