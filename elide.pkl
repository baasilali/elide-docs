amends "elide:project.pkl"
import "elide:project.pkl" as build

name = "elide-documentation"
description = "Official Elide documentation site - built with Elide"

dependencies {
  npm {
    packages {
      "@mdx-js/mdx@3.1.0"
      "gray-matter@4.0.3"
      "react@19.0.0"
      "react-dom@19.0.0"
    }
    devPackages {
      "@tailwindcss/postcss@4.1.17"
      "tailwindcss@4.1.17"
      "@types/react@19.0.0"
      "@types/react-dom@19.0.0"
    }
  }
}

web {
  browsers {
    "last 2 chrome versions"
    "last 2 firefox versions"
    "last 2 safari versions"
    "not dead"
    "> 0.3%"
  }
}


scripts {
  ["build"] = "bun run build"
  ["serve"] = "elide serve dist --port 3000"
  ["dev"] = "bun run build && bun run serve"
  ["clean"] = "rm -rf dist public/styles.css"
}
